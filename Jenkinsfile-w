pipeline {
    agent any

    tools {nodejs "node16"}

    environment {
        CHROME_BIN = '%ProgramFiles%\\Google\\Chrome\\Application\\chrome.exe'
    }

stages {

        stage('Build') {
            steps {
                echo "build stage"
            }
        }
    
        stage('Dependencies') {
            steps {
                bat 'npm ci'
            }
        }
        
        stage('e2e Tests') {
            steps {
                bat 'npm run spec'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}